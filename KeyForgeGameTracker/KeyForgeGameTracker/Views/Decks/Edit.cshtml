                        <span asp-validation-for="MyNotes" class="text-danger"></span>
                    </div>

                </div>
            </div>


            <div id="eg-step6-section" class="card form-section subform-section">
                <div id="eg-step6-header" class="card-header d-flex form-section-header">
                    <div class="flex-fill align-self-center">
                        <span class="h5">Auto Fields</span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-row">
                        <div class="form-group col">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group col">
                            <label asp-for="Expansion" class="control-label"></label>
                            <input asp-for="Expansion" class="form-control" />
                            <span asp-validation-for="Expansion" class="text-danger"></span>
                        </div>
