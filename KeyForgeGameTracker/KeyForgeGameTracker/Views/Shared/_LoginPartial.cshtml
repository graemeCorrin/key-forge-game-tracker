@inject SignInManager<AppUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{

    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">

        <ul class="navbar-nav navbar-right">
            <li>

                <div class="dropdown">

                    <a href="#" class="nav-link text-dark" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        @((await UserManager.GetUserAsync(User)).FirstName) @((await UserManager.GetUserAsync(User)).LastName)
                    </a>

                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">User Profile</a>
                        <button type="submit" class="btn btn-link navbar-btn navbar-link text-dark dropdown-item">Logout</button>
                    </div>
                </div>
            </li>

        </ul>
    </form>
}
else
{
    <ul class="navbar-nav navbar-right">
        <li><a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    </ul>
}