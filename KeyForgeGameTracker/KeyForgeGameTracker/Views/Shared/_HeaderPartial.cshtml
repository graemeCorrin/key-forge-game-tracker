@inject UserManager<AppUser> UserManager

<header>
    <nav id="top-navbar" class="header-site fixed-top navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img class="site-logo" src="@Constants.LogoPath"> </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">

            <partial name="_LoginPartial" />

            <ul class="navbar-nav flex-grow-1">

                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link text-light font-weight-bold" asp-area="" asp-controller="Decks" asp-action="Index">My Decks</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light font-weight-bold" asp-area="" asp-controller="Games" asp-action="Index">My Games</a>
                    </li>
                    @if (await UserManager.IsInRoleAsync(await UserManager.GetUserAsync(User), Role.Admin))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-light font-weight-bold" asp-area="Identity" asp-page="/Account/Admin/Index">User Management</a>
                        </li>
                    }
                }
            </ul>

        </div>
    </nav>
</header>